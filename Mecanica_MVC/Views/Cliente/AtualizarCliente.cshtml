@model Mecanica_MVC.Models.ClienteModel
@{
    ViewData["Title"] = "Atualizar Cliente";
}
<h2>@ViewData["Title"]</h2>



        <div class="container-fluid">
        <form method="post" asp-action="SalvarClienteAtualizado">

                <input asp-for="ID" type="hidden" />

                <label asp-for="Nome" class="col-form-label">@Html.DisplayNameFor(model => model.Nome)</label>
                <input asp-for="Nome" class="form-control" type="text"  >

                <label asp-for="Telefone" class="col-form-label">@Html.DisplayNameFor(model => model.Telefone)</label>
                <input asp-for="Telefone" class="form-control" type="text">


                <label asp-for="Email" class="col-form-label">@Html.DisplayNameFor(model => model.Email)</label>
                <input name="Email" class="form-control" type="text"  value="@Html.DisplayFor(model => model.Email)">


                <label asp-for="Carro" class="col-form-label">@Html.DisplayNameFor(model => model.Carro)</label>
                <input name="Carro" class="form-control" type="text"  value="@Html.DisplayFor(model => model.Carro)">
         

                
                 <button type="submit" class="btn btn-primary mt-2">Atualizar</button>
         </form>
         
        </div>
